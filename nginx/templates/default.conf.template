# 定义上游服务（可以加多个 IP 做负载均衡）
upstream tryon_server {
    server 127.0.0.1:${TRYON_PORT};
}

server {
    listen 80;

    client_max_body_size 100m;

    # # 使用 XFF 头
    # real_ip_header X-Forwarded-For;
    # # 递归解析 XFF 中的最后一个 IP
    # real_ip_recursive on;

    location /composited/ {
        alias /app/composited/;
        autoindex on;                       # 启用目录浏览
        autoindex_exact_size off;           # 文件大小以KB/MB显示（可选）
        autoindex_localtime on;             # 显示本地时间（可选）
    }

    location / {
        proxy_pass http://tryon_server;

        proxy_connect_timeout 300s;
        proxy_send_timeout 300s;
        proxy_read_timeout 600s;

        # WebSocket 关键 header 设置
        proxy_http_version 1.1;

        # 👇 仅当请求头中有 Upgrade 才设置升级头
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;

        # 常规 header 设置
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
